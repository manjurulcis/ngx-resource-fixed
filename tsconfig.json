{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["es2015", "dom"],
    "outDir": "dist"
  },
  "files": [
    "index.ts",
    "core.ts",
    "src/Declarations.ts",
    "src/Resource.ts",
    "src/ResourceAction.ts",
    "src/ResourceGlobalConfig.ts",
    "src/ResourceHandler.ts",
    "src/ResourceHelper.ts",
    "src/ResourceModel.ts",
    "src/ResourceParams.ts",
    "src/ResourceCommon/ResourceCRUD.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
